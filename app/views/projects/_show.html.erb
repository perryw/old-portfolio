<% unless @project.key_resource_id.nil? -%>
<div>
	<span class='value'><%= image_tag Resource.find(@project.key_resource_id).public_filename(:thumb)%></span>
</div>
<% end -%>
<div>
  <span class='key'>Name:</span>
  <span class='value'><%=h @project.name %></span>
</div>
<div>
	<%=h @project.tag_list %>
</div>
<div>
  <span class='key'>Description:</span>
  <span class='value'><%=h @project.description %></span>
</div>
<div>
	<span class='key'>Deliverables:</span>
	<ul id='deliverables_list'>
  		<% @deliverables_ordered.each do |@deliverable| -%>
		    <li id='deliverables_<%=@deliverable.id%>'>
		      <%= render :partial => 'deliverables/show' %>
		    </li>
  		<% end -%>
	</ul>
	<%= sortable_element 'deliverables_list',
      :url => { :action => "order", :id => @project.id }, 
	  :ghosting => true %>
</div>

<div>
	<ul id='project_resources_list'>
		<% @resources_ordered.each do |rez| -%>
       		<% if rez.image? || rez.pdf? -%>
	            <li id='resource_<%=rez.id%>'><%= image_tag rez.public_filename(:thumb) %></li>
	        <% else -%>
				<!--li id='resources_<%=rez.id%>'><%= %></li-->
			<% end -%>
		<% end -%>
	</ul>
	
	<%= sortable_element 'projects_resources_list', 
      :url => { :action => "order", :id => @project.id }, 
	  :ghosting => true %>
</div>