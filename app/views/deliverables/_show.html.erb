<div>
	<% unless @deliverable.key_resource_id.nil? -%>
		<span class='key_resource'><%= image_tag Resource.find(@deliverable.key_resource_id).public_filename(:thumb) unless @deliverable.key_resource_id.nil? %></span>
	<% end -%>
	<span class='key'>Name:</span> <span class='value'><%=h @deliverable.name %></span>
</div>
<div>
	<span class='key'>Tags:</span>
	<span class='value'><%=h @deliverable.tag_list %></span>
</div>

<div>
  <span class='key'>Description:</span>
  <span class='value'><%=h @deliverable.description %></span>
</div>

<div>
	<ul id='resources_list'>
	    <% @resources_ordered.each do |rez| -%>
	        <% if rez.image? || rez.pdf? -%>
	            <li id='resource_<%=rez.id%>'><%= image_tag rez.public_filename(:thumb) %></li>
	        <% #else -%>
				<!--li id='resources_<%=rez.id%>'><%= %></li-->
			<% end -%>
	    <% end -%>  
	</ul>
	<!--p id="list-info"></p-->
	
	<%= sortable_element 'resources_list', 
	      :url => { :action => "order", :id => @deliverable.id }, 
		  :ghosting => true %>
</div>

