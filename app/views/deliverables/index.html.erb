<h1>Listing deliverables</h1>
	
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
	<th># Collaborators</th>
	<th>Owned by</th>
	<th>Tags</th>
  </tr>

<% for deliverable in @deliverables %>
  <tr>
    <td><%=h deliverable.name %></td>
    <td><%=h deliverable.description %></td>
	<td><%=h deliverable.collaborators.size %></td>
	<td><%=h (deliverable.owner.nil? ? "not owned by anybody" : deliverable.owner.name )%></td>
	<td><%= deliverable.tag_list %></td>
    <td><%= link_to 'Show', deliverable %></td>
    <td><%= link_to 'Edit', edit_deliverable_path(deliverable) %></td>
    <td><%= link_to 'Destroy', deliverable, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New deliverable', new_deliverable_path %>

<br />
<br />
<% unless @tags.empty? %>
<% tag_cloud @tags, %w(css1 css2 css3 css4) do |tag, css_class| %>
<%=link_to tag.name, { :action => :tag, :id => tag.name }, :class => css_class %>
<% end %>
<% end %>